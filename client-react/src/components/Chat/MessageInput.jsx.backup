        </SosTemplatesButton>
        {showSosMenu && (
          <SosTemplatesMenu>
            {SOS_TEMPLATES.map((tpl, idx) => (
              <SosTemplateItem
                key={idx}
                style={{ marginBottom: idx !== SOS_TEMPLATES.length - 1 ? 10 : 0 }}
                onClick={() => handleSendQuickTemplate(tpl)}
