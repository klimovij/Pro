                <span style={{fontWeight:900,fontSize:'1.1em',textShadow:'0 2px 8px rgba(255,60,60,0.35)'}}>SOS</span>
                {tpl}
              </SosTemplateItem>
            ))}
          </SosTemplatesMenu>
        )}

        {showPollModal && (
          <PollModalOverlay>
            <PollModal>
              <PollClose onClick={() => setShowPollModal(false)} title="–ó–∞–∫—Ä—ã—Ç—å">
                √ó
              </PollClose>
              <PollTitle>–ë—ã—Å—Ç—Ä–æ–µ –≥–æ–ª–æ—Å–æ–≤–∞–Ω–∏–µ</PollTitle>
              <PollOptionButton onClick={() => handleSendPoll('–£ –≤—Å–µ—Ö –Ω–µ —Ä–∞–±–æ—Ç–∞–µ—Ç 1—Å?')}>
                –£ –≤—Å–µ—Ö –Ω–µ —Ä–∞–±–æ—Ç–∞–µ—Ç 1—Å?
              </PollOptionButton>
              <PollOptionButton onClick={() => handleSendPoll('–£–¥–∞–ª–µ–Ω–∫–∞ —É –≤—Å–µ—Ö –≥–ª—é—á–∏—Ç?')}>
                –£–¥–∞–ª–µ–Ω–∫–∞ —É –≤—Å–µ—Ö –≥–ª—é—á–∏—Ç?
              </PollOptionButton>
            </PollModal>
          </PollModalOverlay>
        )}


        <PollButton type="button" onClick={() => setShowCreatePoll(true)} title="–ë—ã—Å—Ç—Ä–æ–µ –≥–æ–ª–æ—Å–æ–≤–∞–Ω–∏–µ">
          üó≥Ô∏è –ë—ã—Å—Ç—Ä–æ–µ –≥–æ–ª–æ—Å–æ–≤–∞–Ω–∏–µ
        </PollButton>
      {/* –ú–æ–¥–∞–ª–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –≥–æ–ª–æ—Å–æ–≤–∞–Ω–∏—è */}
      {showCreatePoll && (
        <CreatePollModalOverlay>
          <CreatePollModal>
            <PollTitle>–°–æ–∑–¥–∞—Ç—å –≥–æ–ª–æ—Å–æ–≤–∞–Ω–∏–µ</PollTitle>
            <form
              onSubmit={e => {
                e.preventDefault();
                if (!pollQuestion.trim() || pollOptions.some(opt => !opt.trim())) return;
                if (!state.currentChat || !window.socket || !window.socket.connected) return;
                const pollData = {
                  chatId: state.currentChat.id,
                  content: pollQuestion.trim(),
                  messageType: 'poll',
                  pollOptions: pollOptions.map(opt => opt.trim()),
                  fileInfo: null,
                  replyToId: state.replyToMessage?.id || null,
                };
                window.socket.emit('send_message', pollData);
                playNotificationSound(0.3);
                setShowCreatePoll(false);
                setPollQuestion('');
                setPollOptions(['', '']);
                dispatch({ type: 'SET_REPLY_TO_MESSAGE', payload: null });
                setError('');
                if (typingTimeoutRef.current) {
                  clearTimeout(typingTimeoutRef.current);
                  window.socket.emit('stop_typing', { chatId: state.currentChat.id });
                }
              }}
              style={{ width: '100%' }}
            >
              <PollFormLabel htmlFor="poll-question">–¢–µ–º–∞ –≥–æ–ª–æ—Å–æ–≤–∞–Ω–∏—è</PollFormLabel>
              <PollFormInput
                id="poll-question"
                type="text"
                value={pollQuestion}
                onChange={e => setPollQuestion(e.target.value)}
                placeholder="–í–≤–µ–¥–∏—Ç–µ —Ç–µ–º—É..."
                required
                maxLength={120}
                autoFocus
              />
              <PollFormLabel>–í–∞—Ä–∏–∞–Ω—Ç—ã –æ—Ç–≤–µ—Ç–∞</PollFormLabel>
              {pollOptions.map((opt, idx) => (
                <PollFormOptionRow key={idx}>
                  <PollFormInput
                    type="text"
                    value={opt}
                    onChange={e => setPollOptions(
                      pollOptions.map((o, i) => i === idx ? e.target.value : o)
                    )}
                    placeholder={`–í–∞—Ä–∏–∞–Ω—Ç ${idx + 1}`}
                    required
                    maxLength={60}
                  />
                  {pollOptions.length > 2 && (
                    <RemoveOptionBtn type="button" onClick={() => setPollOptions(pollOptions.filter((_, i) => i !== idx))} title="–£–¥–∞–ª–∏—Ç—å –≤–∞—Ä–∏–∞–Ω—Ç">√ó</RemoveOptionBtn>
                  )}
                </PollFormOptionRow>
              ))}
              <AddOptionBtn type="button" onClick={() => setPollOptions([...pollOptions, ''])}>+ –î–æ–±–∞–≤–∏—Ç—å –≤–∞—Ä–∏–∞–Ω—Ç</AddOptionBtn>
              <div style={{ display: 'flex', justifyContent: 'flex-end', gap: '1rem', marginTop: '1.2rem' }}>
                <PollClose type="button" onClick={() => { setShowCreatePoll(false); setPollQuestion(''); setPollOptions(['', '']); }} title="–û—Ç–º–µ–Ω–∞">–û—Ç–º–µ–Ω–∞</PollClose>
                <PollOptionButton as="button" type="submit" style={{ minWidth: 120 }}>–°–æ–∑–¥–∞—Ç—å</PollOptionButton>
              </div>
            </form>
          </CreatePollModal>
        </CreatePollModalOverlay>
      )}

        {showQuickPollMenu && (
  <QuickTemplatesMenu>
    {quickPollTemplates.map((tpl, idx) => (
      <button
        key={idx}
        style={{
          background: 'linear-gradient(90deg, #3390ec 0%, #007bff 100%)',
          color: '#fff',
          border: 'none',
          borderRadius: 12,
          padding: '10px 18px',
          fontWeight: 700,
          fontSize: '1rem',
          marginBottom: idx !== quickPollTemplates.length - 1 ? 8 : 0,
          cursor: 'pointer',
          width: '100%',
          outline: 'none',
          transition: 'background 0.18s',
        }}
        onClick={() => {
          handleSendPoll(tpl);
          setShowQuickPollMenu(false);
        }}
      >
        {tpl.question}
      </button>
    ))}
  </QuickTemplatesMenu>
)}

        

        <EmojiTextarea
          ref={textareaRef}
          value={message}
          onChange={(e) => setMessage(e.target.value)}
          onKeyPress={handleKeyPress}
          placeholder={state.filePreview ? '–î–æ–±–∞–≤—å—Ç–µ –ø–æ–¥–ø–∏—Å—å –∫ —Ñ–∞–π–ª—É...' : '–í–≤–µ–¥–∏—Ç–µ —Å–æ–æ–±—â–µ–Ω–∏–µ...'} 
          rows={1}
          disabled={uploading}
          style={{ resize: 'vertical' }}
        />

        <SendButton onClick={handleSend} disabled={(!message.trim() && !state.filePreview) || uploading} title="–û—Ç–ø—Ä–∞–≤–∏—Ç—å">
          <span style={{ fontWeight: 600, letterSpacing: '0.01em', marginRight: 6, color: '#225' }}>–û—Ç–ø—Ä–∞–≤–∏—Ç—å</span>
          <FiArrowRight size={22} color="#225" />
        </SendButton>
      </InputRow>

      {state.showEmojiPicker && (
        <EmojiPicker className="emoji-picker">
          <EmojiGrid className="emoji-grid">
            {emojis.map((emoji, index) => (
              <Emoji
                key={index}
                size="2.2rem"
                clickable
                onClick={() => handleEmojiSelect(emoji)}
                title={`–î–æ–±–∞–≤–∏—Ç—å ${emoji}`}
                style={{
                  padding: '0.8rem',
                  borderRadius: '8px',
                  transition: 'all 0.2s ease',
                  cursor: 'pointer',
                  display: 'flex',
                  alignItems: 'center',
                  justifyContent: 'center',
                  minWidth: '55px',
                  minHeight: '55px',
                  backgroundColor: 'transparent',
                }}
                onMouseEnter={(e) => {
                  e.target.style.backgroundColor = '#f8f9fa';
                  e.target.style.transform = 'scale(1.3)';
                }}
                onMouseLeave={(e) => {
                  e.target.style.backgroundColor = 'transparent';
                  e.target.style.transform = 'scale(1)';
                }}
              >
                {emoji}
              </Emoji>
            ))}
          </EmojiGrid>
        </EmojiPicker>
      )}


      

      <HiddenFileInput
        ref={fileInputRef}
        type="file"
        onChange={handleFileSelect}
        accept="image/*,.pdf,.doc,.docx,.xls,.xlsx,.txt,.zip,.rar"
      />
    </InputContainer>
  );
}